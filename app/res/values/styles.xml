<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="BackActivityTheme" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/BaseActionBar</item>
        <item name="android:actionBarStyle">@style/BaseActionBar</item>
    </style>

    <style name="ImageActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="BaseActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
    </style>

    <style name="TransparentActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="displayOptions">homeAsUp|showHome</item>
        <item name="android:displayOptions">homeAsUp|showHome</item>
    </style>
</resources>
